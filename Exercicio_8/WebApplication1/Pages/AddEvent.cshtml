@page
@model WebApplication1.Pages.AddEventModel

@{
	ViewData["Title"] = "Add Event";
}

<h2>Cadastrar Eventos</h2>

<form method="post">
	<div class="form-group">
		<label for="Titulo">Título</label>
		<input type="text" class="form-control" id="Titulo" name="Titulo" required />
	</div>

	<div class="form-group">
		<label for="Data">Data</label>
		<input type="datetime-local" class="form-control" id="Data" name="Data" required />
	</div>

	<div class="form-group">
		<label for="Local">Local</label>
		<input type="text" class="form-control" id="Local" name="Local" required />
	</div>

	<button type="submit" class="btn btn-primary">Cadastrar Evento</button>
</form>
