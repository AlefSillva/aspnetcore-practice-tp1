@page
@model WebApplication1.Pages.AddProductModel


@{
    ViewData["Title"] = "Adicionar Produto";
}

<h2>Adicionar Produto</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Nome">Nome:</label>
        <input asp-for="Nome" class="form-control" / />
    </div>

    <div class="form-group">
        <label asp-for="Preco">Preço:</label>
        <input asp-for="Preco" class="form-control" type="number" step="0.01" />
    </div>

    <button type="submit" class="btn btn-primary mt-2">Enviar</button>
</form>

@if (Model.DadosRecebidos)
{
<hr />
<h3>Dados Recebidos:</h3>
<p><strong>Nome:</strong> @Model.Nome</p>
<p><strong>Preço:</strong> R$ @Model.Preco.ToString("F2")</p>
}